@model ReadAThonEntryMvc.Models.Students 
@using System.Web.Mvc
@using StructureMap.Query
@{
    Layout = "~/Views/Layouts/cjrNancyLayout.cshtml";
}
 
@section Head{
  
}
@using(Html.BeginForm("CreateStudent","Student"))
{ 
  <div class="cjr_form"> 
  <h3>The following students matched the search criteria for @Model.School.Name:</h3>
 <hr /> 
 <ul>
@foreach (var student in @Model.StudentList)
{
    <li>@Html.ActionLink(@student.LastName + "," + @student.FirstName,"EditStudent", "Student",
    new { lastname=student.LastName, firstname = student.FirstName, 
        school = student.SchoolName},null)
    <br /></li>
}
</ul>
      <br />

        <input type="hidden" name="School" value="@Model.School" />

        <input type="hidden" name="FirstName" value="@Model.FirstNamesStartingWith" /> 
        <input type="hidden" name="LastName"  value="@Model.LastNamesStartingWith" /> 
 
    <div class="cjr_toolbar">
<h3>If the student you're looking for is not on this list, click here to create a new student record.</h3>
     
      <input type="submit" id="createStudent" class="cjr_button cjr_ui_priority_primary" value="Create Student" />  
    </div> 
      </div>
}
 