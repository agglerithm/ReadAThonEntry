@model ReadAThonEntryMvc.Models.Schools 

@{
    Layout = "~/Views/Layouts/cjrNancyLayout.cshtml";
}
 
@section Head{
  
}
@using (Html.BeginForm("lookup", "Home"))
{
    <div class="cjr_form"> 
  
        <div class="cjr_fieldset_legend">Student successfully saved; enter next student.</div>
        <hr />
        <table> 
            <tr> <td><label>School</label></td>
                <td>  
                    @Html.DropDownListFor(m => m.SelectedSchoolId, 
              new SelectList(Model.EnrolledList,"SchoolId","SchoolName","<Select a school>")) 
                </td>
                <td><input type="hidden" name="School" id="txtSchool" />
                </td></tr>
            <tr><td><label>Student First Name:</label></td><td>
 
                                                               <input type="text" name="FirstName" id="hdnFirst" /></td></tr>
            <tr><td><label>Student Last Name:</label></td><td>
                                                              <input type="text" name="LastName" id="hdnLast" /> 
                                                          </td></tr>
        </table> 
        <div class="cjr_toolbar">
            <input type="submit" id="findStudent" class="cjr_button cjr_ui_priority_primary" value="Find Student" />  
        </div> 
    </div>
}
@section FooterScripts{
    <script type="text/javascript">
        $("#School").change(function () {
            var name = $("#School").val();
            $("#txtSchool").val(name);

        });
 
          </script>
      
    }