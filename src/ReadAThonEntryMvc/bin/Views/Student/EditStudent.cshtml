@model Student

@using ReadAThonEntryMvc.Models
@{
    Layout = "~/Views/Layouts/cjrNancyLayout.cshtml";
}
 
@section Head{
  
}

 <h2>Edit Student</h2>   <hr />           
 @using(Html.BeginForm("EditStudent","Student"))
 { 
     <div class="cjr_form">
         <h3 class="cjr_module_error">@Model.ValidationErrorMsgs</h3>
         <div class="cjr_fieldset_legend">Student Information</div><br />
         <div class="cjr_module_important"><br />
             <ul>
                 <li class="last"><B>School:</B> @Model.SchoolName  </li>
                 <li class="last"><b>Teacher:</b> @Model.TeacherName</li>
                 <li class="last"><b>Student Name:</b> @Model.FirstName @Model.LastName</li> 
                 <li class="last"><B>Online Amount:</B> @Model.AmountFromWebsite</li>
             </ul>   </div> <div class="cjr_fieldset">
                                <label class="cjr_form_label">First Name</label>
                                @Html.TextBoxFor(x => x.FirstName)
                                <label class="cjr_form_label" >Last Name</label> 
                                @Html.TextBoxFor(x => x.LastName)
                                <label class="cjr_form_label" >Teacher</label> 
                                @Html.DropDownListFor(m => m.TeacherId, Contact.GetTeachers(Model.SchoolName));
                                <label class="cjr_form_label" >Grade</label> 
                                @Html.TextBoxFor(x => x.Grade)
                                <label class="cjr_form_label" >Address</label> 
                                @Html.TextBoxFor(x => x.Address1)
                                <label class="cjr_form_label" >City</label> 
                                @Html.TextBoxFor(x => x.City)
                                <label class="cjr_form_label" >State</label> 
                                @Html.TextBoxFor(x => x.State)
                                <label class="cjr_form_label" >Zip</label> 
                                @Html.TextBoxFor(x => x.Zip)
                                <label class="cjr_form_label" >Phone</label> 
                                @Html.TextBoxFor(x => x.Phone)
                            </div> 
         @Html.HiddenFor(x => x.AmountFromWebsite) 
         @Html.HiddenFor(x => x.SchoolName)
         @Html.HiddenFor(x => x.Id)
         <input type="hidden" value="@Model.ShirtSize"   name="ShirtSize" id="hdnShirtSize" />  

         <div class="cjr_fieldset">
             <div class="cjr_fieldset_legend">Data From Envelope</div>
             <hr />
             <div>
                 <label class="cjr_form_label" >Envelope Number</label> 
                 @Html.TextBoxFor(x => x.EnvelopeNumber) 
             </div> 
             <div>
                 <label class="cjr_form_label" >Amount From Envelope $</label> 
                 @Html.TextBoxFor(x => x.AmountFromEnvelope) 
             </div> 
             <div>
                 <label class="cjr_form_label">Reading Goal</label>
                 @Html.TextBoxFor(x => x.ReadingGoal) 
             </div>
             <div>
                 <label class="cjr_form_label">Minutes Read</label>
                 @Html.TextBoxFor(x => x.MinutesRead) 
             </div>
             <div>
                 <label class="cjr_form_label">Pages Read</label>
                 @Html.TextBoxFor(x => x.PagesRead)
             </div>        
  
             <br />   
             <label class="cjr_form_label">Shirt Size</label><br />
             <div class="cjr_module_important">
                       
                 <select  id="selShirtSize">
                     <option value = "@ShirtSize.None"></option>                    
                     <option  Value="@ShirtSize.YouthSmall" @Model.GetSelected(@ShirtSize.YouthSmall)>@ShirtSize.YouthSmall</option>
                     <option  Value="@ShirtSize.YouthMedium" @Model.GetSelected(@ShirtSize.YouthMedium)>@ShirtSize.YouthMedium</option>
                     <option  Value="@ShirtSize.YouthLarge" @Model.GetSelected(@ShirtSize.YouthLarge)>@ShirtSize.YouthLarge</option>
                     <option  Value="@ShirtSize.YouthXl" @Model.GetSelected(@ShirtSize.YouthXl)>@ShirtSize.YouthXl</option>
                     <option  Value="@ShirtSize.AdultSmall" @Model.GetSelected(@ShirtSize.AdultSmall)>@ShirtSize.AdultSmall</option>
                     <option  Value="@ShirtSize.AdultMedium" @Model.GetSelected(@ShirtSize.AdultMedium)>@ShirtSize.AdultMedium</option>
                     <option  Value="@ShirtSize.AdultLarge" @Model.GetSelected(@ShirtSize.AdultLarge)>@ShirtSize.AdultLarge</option>
                     <option  Value="@ShirtSize.AdultXl" @Model.GetSelected(@ShirtSize.AdultXl)>@ShirtSize.AdultXl</option>  
                 </select>
             </div>
         </div> 
         <br />           
         <div>
             <label class="cjr_form_label">Comments</label><br />
             <textarea cols="30" rows="3" name="Comments">@Model.Comments</textarea>
         </div>       
     </div><hr />                <div class="cjr_toolbar">
      <input type="submit" class="cjr_button cjr_ui_priority_primary" value="Save Changes" />  
    </div>       
      }
      @section FooterScripts{
    <script type="text/javascript">
        $("#selShirtSize").change(function () {
            var size = $("#selShirtSize").val();
            $("#hdnShirtSize").val(size);

        });
 
          </script>